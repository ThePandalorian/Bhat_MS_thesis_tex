	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/2041-210X.13291},
	keywords = {backwards induction, Markov chain, Markov decision process, optimality models, stationary decisions, stochastic dynamic programming, value iteration},
	file = {Full Text PDF:/mnt/data/Work/Zotero_database/storage/7N5HQJBP/Reimer et al. - 2019 - Matrix methods for stochastic dynamic programming .pdf:application/pdf;Snapshot:/mnt/data/Work/Zotero_database/storage/YDJ4IE5K/2041-210X.html:text/html},
