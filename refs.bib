	date = {2011-08-30},
	keywords = {Contingency Locus, Neisseria Meningitidis, Phenotypic State, Population Bottleneck, Switching Type},
	file = {Full Text PDF:/mnt/data/Work/Zotero_database/storage/Q84WWQFK/Rainey et al. - 2011 - The evolutionary emergence of stochastic phenotype.pdf:application/pdf;Snapshot:/mnt/data/Work/Zotero_database/storage/LXU9NK3Q/1475-2859-10-S1-S14.html:text/html},
