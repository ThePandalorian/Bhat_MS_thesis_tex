	number = {4},
	journaltitle = {{PLOS} {ONE}},
	shortjournal = {{PLOS} {ONE}},
	author = {Elfwing, Stefan and Doya, Kenji},
	urldate = {2022-01-05},
	date = {2014-04-09},
	langid = {english},
	note = {Publisher: Public Library of Science},
	keywords = {Learning, Evolutionary genetics, Evolutionary biology, Foraging, Mating behavior, Natural selection, Robotic behavior, Robots},
	file = {Full Text PDF:/mnt/data/Work/Zotero_database/storage/LACUSF74/Elfwing and Doya - 2014 - Emergence of Polymorphic Mating Strategies in Robo.pdf:application/pdf;Snapshot:/mnt/data/Work/Zotero_database/storage/49XM6F3U/article.html:text/html},
}

@article{krivan_ideal_2008,
