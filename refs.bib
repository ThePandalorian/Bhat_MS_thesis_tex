	number = {4},
	journaltitle = {The American Naturalist},
	author = {Cressman, Ross and Křivan, Vlastimil and Garay, József},
	urldate = {2022-02-17},
	date = {2004-10},
	note = {Publisher: The University of Chicago Press},
	keywords = {competition, evolutionarily stable strategy, habitat choice, ideal free distribution, adaptive foraging, predator‐prey, replicator system},
