	author = {Wong, Bob B. M. and Candolin, Ulrika},
	urldate = {2021-12-20},
	date = {2005-11},
	langid = {english},
	note = {Publisher: Cambridge University Press},
	keywords = {sexual selection, courtship disruption, eavesdropping, fitness, mate detection, mate evaluation, mating outcome, sexual conflict, signal honesty},
